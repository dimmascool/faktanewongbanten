<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BeritaActvty">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_marginStart="105dp"
            android:src="@drawable/logo_apk"
            android:layout_width="150dp"
            android:layout_height="70dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/ivGambar"
            android:background="@color/opacityblack"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="150dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/tvJudul"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Berita"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tvTanggal"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Berita"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tvPenulis"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penulis : Khatibul Umam"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvIsiBerita"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Isi Berita"
            tools:ignore="HardcodedText,UnusedAttribute" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>

